{
    "compilerOptions": {
        "outDir": "./dist",
        "esModuleInterop": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}
