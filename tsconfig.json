{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./src",
    "./src/types"
  ],
  "exclude": [
    "node_modules"
  ]
}
